<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dance_Vocational">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFEB3B">

        <ImageView
            android:id="@+id/backdance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:padding="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            android:text="Dance"
            android:textColor="@color/black"
            android:textSize="30dp">

        </TextView>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dancee" />


    <!-- New TextView for Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:background="@color/design_default_color_secondary"
        android:textStyle="bold"
        android:padding="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dance is a performing art that involves rhythmically moving the body and feet, often to music, and following an established pattern of steps. It is a form of expression and communication of emotion, and can be used to tell a story. Dance can be categorized and described by its choreography, repertoire of movements, or historical period or place of origin. Styles range from ballroom, which is danced by couples, to performance arts like ballet, where individuals dance as part of a troupe. Other styles include jazz, hip-hop, and traditional dances from various cultures. Dance is not only a form of exercise, but also an art form that aims to express emotions and communicate ideas.
"
        android:justificationMode="inter_word"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Career opportunities: "
        android:background="@color/design_default_color_secondary"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Career opportunities in dance are diverse and offer a range of options for individuals passionate about the art form. Some of the potential career paths in dance include:Professional Dancer,Dance Teacher,Choreographer,Dance Photographer/Videographer,Dance Therapist,Arts Administration."
        android:paddingStart="5dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:justificationMode="inter_word"
        android:textSize="18sp" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:id="@+id/webdance">
        </WebView>

        <Button
            android:id="@+id/clickdance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click For More"
            android:background="@drawable/button_color2"
            android:layout_margin="20dp">

        </Button>



</LinearLayout>

</ScrollView>