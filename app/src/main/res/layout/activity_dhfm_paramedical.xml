<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DHFM_Paramedical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFEB3B">

            <ImageView
                android:id="@+id/backdhfm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:padding="15dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:text="DHFM"
                android:textColor="@color/black"
                android:textSize="30dp">

            </TextView>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/familymedicianaa" />


        <!-- New TextView for Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:background="@color/design_default_color_secondary"
            android:textStyle="bold"
            android:padding="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="A Diploma in Family Medicine (DFM) is a specialized program offered to candidates with a graduation degree in the field of medicine. It equips medical professionals to provide comprehensive healthcare services, recommend clinical tests, monitor chronic illnesses, and refer patients to specialists when necessary.The program is typically open to candidates who have completed an MBBS degree or are in the final year of their studies, with a minimum aggregate of 50% at the graduation level. The duration of the course can vary from 6 months to 2 years, and some institutes offer online options. Upon completion, candidates can pursue careers in renowned hospitals and research institutes, offering primary medical care for patients of all ages and genders. The course provides a great learning opportunity and opens up various job prospects for medical professionals."
            android:justificationMode="inter_word"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subjects: "
            android:textColor="@color/black"
            android:background="@color/design_default_color_secondary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candidates with a Diploma Family Medicine certificate can take up jobs with renowned hospitals and research institutes. Some of the job roles that candidates can take up are: General Physician,Medical Researcher,Hospital Administrator,Lecturer,Self-practice."
            android:paddingStart="5dp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:textSize="18sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career opportunities: "
            android:textColor="@color/black"
            android:background="@color/design_default_color_secondary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candidates with a Diploma Family Medicine certificate can take up jobs with renowned hospitals and research institutes. Some of the job roles that candidates can take up are: General Physician,Medical Researcher,Hospital Administrator,Lecturer,Self-practice."
            android:paddingStart="5dp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:textSize="18sp" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:id="@+id/webdhfm">
        </WebView>

        <Button
            android:id="@+id/clickdhfm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click For More"
            android:background="@drawable/button_color2"
            android:layout_margin="20dp">

        </Button>





    </LinearLayout>

</ScrollView>